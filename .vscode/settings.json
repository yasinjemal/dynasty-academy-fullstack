{
  // VSCode Settings for Dynasty Academy
  
  // 🔄 Auto-save settings - NEVER lose work again!
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  
  // 💾 Git auto-fetch - Stay synced with remote
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.postCommitCommand": "push",
  
  // 📁 Files to exclude from explorer
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/.next": true
  },
  
  // 🎨 Editor settings
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  
  // 📝 TypeScript settings
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  
  // 🗂️ File associations
  "files.associations": {
    "*.css": "tailwindcss",
    ".env*": "dotenv"
  },
  
  // 🔍 Search exclusions
  "search.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/dist": true,
    "**/.git": true,
    "**/package-lock.json": true
  },
  
  // 📊 Git settings
  "git.openRepositoryInParentFolders": "always",
  "git.suggestSmartCommit": true,
  
  // 🚀 Quick save reminder
  "window.title": "${activeEditorShort}${separator}${rootName} - 💾 Press Ctrl+Shift+B to save to GitHub!"
}
